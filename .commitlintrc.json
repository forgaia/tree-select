{
  "parserPreset": {
    "parserOpts": {
      "issuePrefixes": ["BPAG-"]
    }
  },
  "rules": {
    "references-empty": [2, "never"],
    "body-leading-blank": [1, "always"],
    "footer-leading-blank": [1, "always"],
    "header-max-length": [2, "always", 120],
    "scope-case": [0, "never"],
    "subject-case": [0, "never"],
    "subject-empty": [0, "never"],
    "subject-full-stop": [0, "never"],
    "type-case": [0, "never"],
    "type-empty": [0, "never"],
    "type-enum": [0, "never"]
  }
}
